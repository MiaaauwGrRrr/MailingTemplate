mixin inspo-C-IR_TitleL_MobileBottom(data)    
    <!-- PROMO BLOK -->
    table(width="100%" border="0" cellspacing="0" cellpadding="0" class="table-wrapper" bgcolor="#FFFFFF")
    tr
        td(align="center" valign="top" class="td-padding-outer" style="padding:0 0 50px 0;")
            table(width="600" border="0" cellspacing="0" cellpadding="0" class="table-full" bgcolor="#EEEEEE")
                tr
                    td(lign="left" valign="top")
                        table(width="49%" height="300" align="left" border="0" cellspacing="0" cellpadding="0" class="table-full h-100" bgcolor="#EEEEEE")
                            tr
                                td(align="center" valign="middle" class="mso-pt-50")
                                    table(width="100%" border="0" cellspacing="0" cellpadding="0" class="table-full")
                                        tr
                                            td(align="center" valign="bottom" style="padding-top: 25px;")
                                        tr
                                            td(align="center" valign="middle" style="padding:15px 25px 0 25px;")
                                                table(width="100%" border="0" cellspacing="0" cellpadding="0" class="table-full")
                                                    tr
                                                        td(align="center" valign="middle" class="pt-5" style="font-family: Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; color: #000000; font-size: 20px; line-height: 23px; text-decoration: none; padding-bottom: 8px;")=data.title
                                        tr
                                            td(align="center" valign="bottom" style="padding-bottom: 25px;")
                                                table(border="0" cellspacing="0" cellpadding="0")
                                                    tr
                                                        td(align="left" valign="middle" width="16" style="padding-right:10px;")
                                                            img(src="https://www.collishop.be/ecomwcs/static/StaticWeb/CS/mailbanners/images/arrow.png" alt="pijl" width="16" height="16" alt="" border="0" style="display:block;")
                                                        td(align="center" valign="middle" style="font-family: Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-size:14px; line-height:22px; color:#0098DA; display: inline")
                                                            a(href=`${data.link}` name=`img_${data.img}` target="_blank" xt="SPCLICKSTREAM" style="color:#0098DA; text-decoration:none;")=data.cta
                        table(width="49%" height="300" align="right" border="0" cellspacing="0" cellpadding="0" class="table-full h-100" bgcolor="#EEEEEE")
                            tr
                                td(align="center" valign="middle")
                                    a(href=`${data.link}` name=`img_${data.img}` target="_blank" xt="SPCLICKSTREAM")
                                        img(src=`img/${data.img}.jpg` alt=`${data.img}` width="300" height="300"  border="0" class="img-full" style="display:block;")
    <!-- PROMO BLOK -->