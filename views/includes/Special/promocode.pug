mixin promocode(data)
    <!-- PROMOCODE -->
    table(width="100%" border="0" cellspacing="0" cellpadding="0" class="table-wrapper" bgcolor="#FFFFFF")
        tr
            td(align="center" valign="top" class="td-padding-outer" style="padding:0px 0 25px 0;")
                table(width="600" border="0" cellspacing="0" cellpadding="0" class="table-full" bgcolor="#7BB5C9")
                    tr
                        td(align="center" valign="top" style="padding:25px 60px 25px 60px;")
                            table(width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#7BB5C9")
                                tr
                                    td(align="center" valign="top" style="padding-bottom: 15px;")
                                        a(href=`${data.link}` name=`img_${data.img}` target="_blank" xt="SPCLICKSTREAM" style="font-family: Tahoma, Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-size:24px; line-height:28px; color:#000000; text-decoration: none;")!=data.title
                                tr
                                    td(align="center" valign="top")
                                        table(bgcolor="white" style="border-radius: 22px;")
                                            tr
                                                td(align="center" valign="top" style="font-family: Tahoma, Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-size:20px; line-height:23px; font-weight:bold; color: #4c4c4c; padding:10px 30px 10px 30px; text-decoration: none;")!=data.promocode
                                tr
                                    td(align="center" valign="middle" style="padding: 25px 0 17px;")
                                        table(border="0" cellspacing="0" cellpadding="0")
                                            tr
                                                td(align="center" valign="middle" bgcolor="#E83C5F" style="padding:15px 20px 15px 20px;")
                                                    table(border="0" cellspacing="0" cellpadding="0")
                                                        tr
                                                            td(align="center" valign="middle" style="font-family: Titillium Web,Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-weight:700; font-size:18px; line-height:21px; color:#FFFFFF;")
                                                                a(href=`${data.link}` name=`img_${data.img}` target="_blank" xt="SPCLICKSTREAM" style="color:#FFFFFF; text-decoration:none; font-weight: 700px;")!=data.cta
                                                            td(align="left" valign="middle" width="16" style="padding-right:10px;")
                                                                img(src="https://www.collishop.be/ecomwcs/static/StaticWeb/CS/mailbanners/images/arrow-icon-transparent.png" alt="pijl" width="16" height="16"  border="0" style="display:block;" ) 
    <!-- PROMOCODE -->