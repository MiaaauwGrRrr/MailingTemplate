<!-- INTRO -->
mixin Intro(data)
    table(width="100%" border="0" cellspacing="0" cellpadding="0" class="table-wrapper" bgcolor="#FFFFFF")
        tr
            td(align="center" valign="top" class="td-padding-outer")
                table(width="600" border="0" cellspacing="0" cellpadding="0" class="table-full" bgcolor="#FFFFFF")
                    tr
                        td(align="left" valign="top" class="td-padding-inner" style="padding:25px 0 25px 0;")
                            table(width="100%" border="0" cellspacing="0" cellpadding="0")
                                -if(data.aanspreking)
                                tr
                                    td(align="left" valign="top" style="font-family: Titillium Web,Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif;; font-size:20px; line-height:30px; color:#333333; font-weight:bold; padding-bottom:10px;")!=data.aanspreking
                                -for(var i = 0; i < data.tekst.length; i++)
                                    tr
                                        td(align="left" valign="top" style="font-family: Titillium Web,Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif;; font-size:16px; line-height:24px; color:#333333; margin-bottom: 10px;")!=data.tekst[i]
                                -if(data.afsluiting)
                                tr
                                    td(align="left" valign="top" style="font-family: Titillium Web,Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif;; font-size:16px; line-height:24px; color:#333333;")
                                        p!=data.afsluiting
<!-- INTRO -->